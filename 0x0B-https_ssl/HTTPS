  <h4 class="task">
    0. HTTPS ABC
    <span class="alert alert-warning mandatory-optional">
      mandatory
    </span>
  </h4>


  <!-- Progress vs Score -->
    <div class="task_progress_score_bar" data-task-id="1529" data-correction-id="7608">
      <div class="task_progress_bar">
        <div class="task_score_bar">
